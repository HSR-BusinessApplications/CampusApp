<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="AppTheme" parent="android:Theme.Holo.Light" />
  <style name="SmallAndLight" parent="android:TextAppearance.Holo.Small">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#FF888888</item>
  </style>

  <style name="Theme.Splash" parent="android:Theme.Holo.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Theme.View" parent="android:Theme.Holo.Light">

  </style>

  <style name="ButtonHome">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:clickable">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:textColor">@drawable/text_clickable</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:drawablePadding">5dp</item>
  </style>

  <style name="CenteredActionBarTheme"
           parent="android:Theme.Holo.Light">
    <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
  </style>

  <!-- action bar tab text -->
  <style name="TabTextStyle"
         parent="android:Widget.Holo.ActionBar.TabText">
    <item name="android:gravity">center</item>
  </style>

</resources>
